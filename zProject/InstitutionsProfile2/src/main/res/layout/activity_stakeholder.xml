<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_stakeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#ddd"
    tools:context="com.csi.institutionsprofile.Activity.ActivityStakeholder">
    <!--Header-->
    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:background="@color/brandColorLight"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:id="@+id/imageViewBackPress"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/back_arrow"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewGuidelines"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/imageViewBackPress"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible"/>
            <!--
            <TextView
                android:id="@+id/textViewBankAgentUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="2dp"
                android:text="Jahidul Islam"
                android:layout_toRightOf="@+id/imageViewProfile"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize12sp" />
                -->
            <ImageView
                android:id="@+id/imageViewSetting"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/textViewStakeholderSearchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="@string/stakeholder_search"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize17sp" />
        <!--<TextView
            android:id="@+id/textViewStakeholderSearchItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="@string/searchitemStakeholder"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize12sp" />-->
        <!--Search Label-->
        <LinearLayout
            android:id="@+id/linearlayoutSearch"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/search_field_style">

            <Spinner
                android:id="@+id/spinnerSearchDivision"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:fitsSystemWindows="true"
                android:gravity="center|"
                android:paddingBottom="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="10dp"
                android:popupBackground="@drawable/spinner_popup_style"
                android:scrollbarSize="4dp"
                android:spinnerMode="dropdown"
                android:visibility="visible" />
            <!--
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:background="@color/md_blue_400" />
                -->

            <TextView
                android:id="@+id/searchViewStakeHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                apps:theme="@style/AppSearchView"
                android:searchIcon="@null"
                android:iconifiedByDefault="false"
                android:searchHintIcon="@null"
                android:textColor="@color/white"
                apps:goIcon="@drawable/search_icon"
                android:backgroundTint="@android:color/transparent"
                />
            <ImageView
                android:id="@+id/imageViewSearch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/search_icon"/>

        </LinearLayout>

    </LinearLayout>
    <!--card-->
    <RelativeLayout
        android:id="@+id/relativeSelectBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="125dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/profile_card_style"
        android:layout_alignTop="@+id/Header"
        >
        <!--layer 1-->
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <!--DEO-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/chekboxDEO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="DEO"
                    android:layout_marginRight="0dp"
                    android:textColor="@color/textColorTitleSmall"
                    android:textSize="@dimen/textsize12sp"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:scaleX=".85"
                    android:scaleY=".85"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:theme="@style/checkBoxStyle"/>

            </RelativeLayout>
            <!--DEO-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <CheckBox
                    android:id="@+id/chekboxDC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="DC"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/textColorTitleSmall"
                    android:textSize="@dimen/textsize12sp"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:scaleX=".85"
                    android:scaleY=".85"
                    android:layout_alignParentLeft="true"
                    android:theme="@style/checkBoxStyle"/>


            </RelativeLayout>
            <!--USEO-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/chekboxUSEO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="USEO"
                    android:layout_marginRight="0dp"
                    android:textColor="@color/textColorTitleSmall"
                    android:textSize="@dimen/textsize12sp"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:scaleX=".85"
                    android:scaleY=".85"
                    android:layout_marginLeft="30dp"
                    android:theme="@style/checkBoxStyle"/>

            </RelativeLayout>
            <!--BM college-->


        </LinearLayout>
        <!--layer 2-->
        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_below="@+id/l1">
            <!--UNO-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/chekboxUNO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="UNO"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="30dp"
                    android:textColor="@color/textColorTitleSmall"
                    android:textSize="@dimen/textsize12sp"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:scaleX=".85"
                    android:scaleY=".85"
                    android:layout_alignParentLeft="true"
                    android:theme="@style/checkBoxStyle"/>

            </RelativeLayout>
            <!--Police Super-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <!--PS-->
                <CheckBox
                    android:id="@+id/chekboxPS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="SP"
                    android:layout_marginRight="0dp"
                    android:textColor="@color/textColorTitleSmall"
                    android:textSize="@dimen/textsize12sp"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:scaleX=".85"
                    android:scaleY=".85"
                    android:theme="@style/checkBoxStyle"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="23dp"/>
            </RelativeLayout>
            <!--OC-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/chekboxOC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="OC"
                    android:layout_marginLeft="21dp"
                    android:textColor="@color/textColorTitleSmall"
                    android:textSize="@dimen/textsize12sp"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:scaleX=".85"
                    android:scaleY=".85"
                    android:theme="@style/checkBoxStyle"/>

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylcerViewStakeHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="745dp"
        tools:layout_editor_absoluteY="-51dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/relativeSelectBox"
        />

</RelativeLayout>
