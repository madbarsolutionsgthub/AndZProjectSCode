<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="11dp"
    android:paddingRight="11dp"
    android:paddingTop="11dp"
    android:padding="0dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/profile_card_style">
    <!--
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="11dp"
    android:background="@drawable/profile_card_style">
    -->

    <!--institute name Label-->
    <TextView
        android:id="@+id/textViewInstituteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cambrian School and College"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/textsize17sp"
        android:textColor="@color/brandColorLight"
        android:layout_toLeftOf="@+id/chekboxMultiSms"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        />
    <!--checkbox-->
    <CheckBox
        android:id="@+id/chekboxMultiSms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize12sp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:scaleX=".85"
        android:scaleY=".85"
        android:theme="@style/checkBoxStyle"/>

    <!--Division name Label-->
    <TextView
        android:id="@+id/textViewDivisionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dhaka"
        android:layout_marginLeft="11dp"
        android:layout_below="@+id/textViewInstituteName"
        android:textSize="@dimen/textsize12sp"
        android:textColor="@color/textColorTitleSmall"
        android:layout_alignParentLeft="true"
        />
    <!--District name Label-->
    <TextView
        android:id="@+id/textViewDistrictName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="DH"
        android:layout_below="@+id/textViewInstituteName"
        android:textColor="@color/textColorTitleSmall"
        android:textSize="@dimen/textsize12sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textViewDivisionName"
        />
    <!--Thana name Label-->
    <TextView
        android:id="@+id/textViewThanaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mirpur"
        android:layout_below="@+id/textViewInstituteName"
        android:textColor="@color/textColorTitleSmall"
        android:textSize="@dimen/textsize12sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textViewDistrictName"
        />
    <!--institute type and category-->
    <RelativeLayout
        android:id="@+id/relativeInstituteType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_below="@+id/textViewDivisionName"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:elevation="5dp"
        android:background="@drawable/mini_box_style">

    <TextView
        android:id="@+id/textViewInstituteType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Govt"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/textsize12sp"
        android:textColor="@color/brandColorLight"
        android:layout_alignParentLeft="true"
        />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeInstituteCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textViewDivisionName"
        android:layout_toRightOf="@+id/relativeInstituteType"
        android:layout_marginTop="5dp"
        android:elevation="5dp"
        android:background="@drawable/mini_box_style">

        <TextView
            android:id="@+id/textViewInstituteCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Boys"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/textsize12sp"
            android:textColor="@color/textColorTitleSmall"
            android:layout_alignParentLeft="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:editable="false"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/relativeInstituteType"
        android:visibility="invisible"/>
    <!--Small Box label-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:id="@+id/relativeSmallBox"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/small_box_style">
    <!--head of the institute name Label-->
    <TextView
        android:id="@+id/textViewPrincipleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Golam Mostafa"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/textsize12sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textColor="@color/textColorTitleLarge"/>
        <!--position title-->
        <TextView
            android:id="@+id/textViewPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Principle"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textsize12sp"
            android:textColor="@color/textColorTitleSmall"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/textViewPrincipleName"/>

        <!--mobile no title label-->
    <TextView
        android:id="@+id/textViewMobileNoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mobile:"
        android:textColor="@color/textColorTitleLarge"
        android:textSize="@dimen/textsize12sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textViewPosition"
        android:layout_marginTop="3dp"/>
    <!--mobile no Label-->
    <TextView
        android:id="@+id/textViewMobileNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="01671340909"
        android:textColor="@color/textColorTitleSmall"
        android:textSize="@dimen/textsize12sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textViewPosition"
        android:layout_toRightOf="@+id/textViewMobileNoTitle"
        android:layout_marginTop="3dp"/>
    <!--email title label-->
    <TextView
        android:id="@+id/textViewEmailNoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email:"
        android:textColor="@color/textColorTitleLarge"
        android:textSize="@dimen/textsize12sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textViewMobileNoTitle"
        android:layout_marginTop="3dp"/>
    <!--email no Label-->
    <TextView
        android:id="@+id/textViewEmailNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="zahidul.islam@csinfotech.com"
        android:textColor="@color/textColorTitleSmall"
        android:textSize="@dimen/textsize12sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textViewMobileNoTitle"
        android:layout_toRightOf="@+id/textViewMobileNoTitle"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="15dp"/>
    </RelativeLayout>

    <!--CALL SMS AND EMAIL label-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeSmallBox"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:gravity="right">
    <ImageView
        android:id="@+id/imageViewCall"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/call_icon"/>
        <ImageView
            android:id="@+id/imageViewSMS"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sms_icon"
            android:layout_toRightOf="@+id/imageViewCall"/>
        <ImageView
            android:id="@+id/imageViewEmail"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/email_icon"
            android:layout_toRightOf="@+id/imageViewSMS"/>

    </RelativeLayout>
</RelativeLayout>