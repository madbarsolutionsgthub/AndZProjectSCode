<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_project_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#ddd"
    tools:context="com.csi.institutionsprofile.Activity.ActivityProjectDetails">
    <!--Header label-->
    <RelativeLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:background="@color/brandColorLight"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/imageViewBackPress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/back_arrow"/>
            <TextView
                android:id="@+id/textViewTootbarTitleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingLeft="2dp"
                android:text="@string/projectDetailsTitle"
                android:layout_toRightOf="@+id/imageViewBackPress"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize17sp" />
        </RelativeLayout>
    </RelativeLayout>
    <!--
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:src="@color/md_green_500"
        />
-->
    <!-- language chooser label-->
    <info.hoang8f.android.segmented.SegmentedGroup
        android:id="@+id/segmentedGroupLanguageBanEng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/capsul_box_style"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        segmentedgroup:sc_border_width="0dp"
        segmentedgroup:sc_checked_text_color="#fff"
        segmentedgroup:sc_corner_radius="15dp"
        segmentedgroup:sc_tint_color="@color/brandColorDeep">

        <RadioButton
            android:id="@+id/buttonLanguageBan"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BAN"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/buttonLanguageEng"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENG"
            />
    </info.hoang8f.android.segmented.SegmentedGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Header"
        android:layout_marginTop="20dp">
        <!--first label-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_card_style"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <!-- title label-->
            <RelativeLayout
                android:id="@+id/relativeFirst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="11dp"
                android:padding="0dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="10dp"
                android:elevation="15dp"
                android:layout_marginTop="11dp"
                >
                <!--title Label-->
                <TextView
                    android:id="@+id/textViewTitleHSSP"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/hsspTitle"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="0dp"
                    android:textSize="@dimen/textsize17sp"
                    android:textColor="@color/brandColorLight"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="0dp"
                    android:visibility="invisible"/>
                <!--description Label-->
                <TextView
                    android:id="@+id/textViewDesBanbesis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/banbasisDes"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="11dp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="0dp"
                    android:textSize="@dimen/textsize12sp"
                    android:textColor="@color/textColorTitleSmall"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/textViewTitleHSSP"
                    android:layout_marginBottom="0dp"/>
            </RelativeLayout>
            <!--frame 1-->
            <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/relativeFirst"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="11dp"
                android:visibility="invisible">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/small_box_style"
                android:layout_marginTop="10dp">
                <!--  Place the objects you want on the bottom here -->

                <TextView
                    android:id="@+id/textViewMinisterTalk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/banbasisDes"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="23dp"
                    android:lineSpacingExtra="2dp"
                    android:textSize="@dimen/textsize12sp"
                    android:textColor="#111"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="0dp"/>
                <LinearLayout
                    android:layout_below="@+id/textViewMinisterTalk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageViewMinister"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/nahid"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/ministerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nurul Islam Nahid"
                            android:textColor="@color/textColorTitleSmall"
                            android:gravity="center|left"
                            android:layout_marginTop="5dp"
                            android:textSize="@dimen/textsize12sp"/>
                        <TextView
                            android:id="@+id/minister"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Minister"
                            android:textSize="10sp"
                            android:gravity="center|left"
                            android:layout_marginTop="2dp"
                            android:layout_below="@+id/ministerName"
                            android:textColor="@color/brandColorLight"/>
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <!--  Place the objects you want on the top here -->
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/quotation"
                    android:layout_toRightOf="@+id/imageViewCall"
                    android:layout_centerInParent="true"/>


            </RelativeLayout>
        </FrameLayout>
            <!--frame 2-->
            <FrameLayout
                android:id="@+id/frame2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/frame1"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="11dp"
                android:visibility="invisible">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/small_box_style"
                    android:layout_marginTop="10dp">
                    <!--  Place the objects you want on the bottom here -->

                    <TextView
                        android:id="@+id/textViewSeceretaryTalk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/banbasisDes"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:layout_marginTop="23dp"
                        android:lineSpacingExtra="2dp"
                        android:textSize="@dimen/textsize12sp"
                        android:textColor="#111"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="0dp"/>
                    <LinearLayout
                        android:layout_below="@+id/textViewSeceretaryTalk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imageViewSecretary"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/bepari"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/secretaryName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Shyama Prasad Bepari"
                                android:textColor="@color/textColorTitleSmall"
                                android:gravity="center|left"
                                android:layout_marginTop="5dp"
                                android:textSize="@dimen/textsize12sp"/>
                            <TextView
                                android:id="@+id/secretary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Joint Secretary"
                                android:textSize="10sp"
                                android:gravity="center|left"
                                android:layout_marginTop="2dp"
                                android:layout_below="@+id/secretaryName"
                                android:textColor="@color/brandColorLight"/>
                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <!--  Place the objects you want on the top here -->
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/quotation"
                        android:layout_toRightOf="@+id/imageViewCall"
                        android:layout_centerInParent="true"/>


                </RelativeLayout>
            </FrameLayout>
            <!--purpose label-->
            <TextView
                android:id="@+id/textViewTitlePurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Purpose of HSSP:"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="0dp"
                android:textSize="@dimen/textsize17sp"
                android:textColor="@color/brandColorLight"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/frame2"
                android:layout_marginBottom="0dp"
                />
            <TextView
                android:id="@+id/textViewPurposeDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/puposeDetaile"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="11dp"
                android:lineSpacingExtra="3dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/textsize12sp"
                android:textColor="@color/textColorTitleSmall"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewTitlePurpose"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textViewPurposeExactTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Purpose of HSSP:"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/textsize17sp"
                android:textColor="@color/brandColorLight"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewPurposeDetails"
                android:layout_marginBottom="0dp"/>

            <TextView
                android:id="@+id/textViewPurposeExactDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/puposeDetaile"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="11dp"
                android:lineSpacingExtra="3dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/textsize12sp"
                android:textColor="@color/textColorTitleSmall"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewPurposeExactTitle"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/textViewHsspDoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Purpose of HSSP:"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/textsize17sp"
                android:textColor="@color/brandColorLight"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewPurposeExactDetails"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/textViewHsspDoDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/puposeDetaile"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="11dp"
                android:lineSpacingExtra="3dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/textsize12sp"
                android:textColor="@color/textColorTitleSmall"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewHsspDoTitle"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textViewHsspAmountTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Amount"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/textsize17sp"
                android:textColor="@color/brandColorLight"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewHsspDoDetails"
                android:layout_marginBottom="0dp"/>
            <ImageView
                android:id="@+id/imageViewAmount"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@+id/textViewHsspAmountTitle"
                android:layout_marginTop="0dp"
                android:src="@drawable/amount"/>
        </RelativeLayout>

    </ScrollView>
        </RelativeLayout>
