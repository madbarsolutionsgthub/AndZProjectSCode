<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#ddd"
    tools:context="com.j.nike.MainActivity">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!-- MEN-->
            <RelativeLayout
                android:id="@+id/relativeFirstMilestone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="11dp"
                android:padding="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="15dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/profile_card_style">

                <ImageView
                    android:id="@+id/imageViewFirstMilestone"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/shop_men"
                    />

                <!--title Label-->
                <TextView
                    android:id="@+id/textViewTitleFirstMilestone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Men Collection"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/textsize17sp"
                    android:textColor="#111"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="0dp"
                    android:layout_below="@+id/imageViewFirstMilestone"/>
                <!--description Label-->
                <!--link button label -->
                <Button
                    android:id="@+id/buttonMen"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/link_button_style"
                    android:textSize="11sp"
                    android:text="GO"
                    android:elevation="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_below="@+id/textViewTitleFirstMilestone"
                    android:layout_marginRight="11dp"
                    android:layout_marginLeft="11dp"/>
            </RelativeLayout>
            <!-- WOMEN-->
            <RelativeLayout
                android:id="@+id/relativeSecondMilestone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="11dp"
                android:padding="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="11dp"
                android:layout_below="@+id/relativeFirstMilestone"
                android:background="@drawable/profile_card_style">

                <ImageView
                    android:id="@+id/imageViewSecondMilestone"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/shop_women"
                    />

                <!--title Label-->
                <TextView
                    android:id="@+id/textViewTitleSecondMilestone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Women Collection"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/textsize17sp"
                    android:textColor="#111"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="0dp"
                    android:layout_below="@+id/imageViewSecondMilestone"/>
                <!--link button label -->
                <Button
                    android:id="@+id/buttonWomen"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/link_button_style"
                    android:textSize="11sp"
                    android:text="GO"
                    android:elevation="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_below="@+id/textViewTitleSecondMilestone"
                    android:layout_marginRight="11dp"
                    android:layout_marginLeft="11dp"/>
            </RelativeLayout>
            <!-- BOYS-->
            <RelativeLayout
                android:id="@+id/relativeSecondMilestone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="11dp"
                android:padding="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="11dp"
                android:layout_below="@+id/relativeSecondMilestone"
                android:background="@drawable/profile_card_style">

                <ImageView
                    android:id="@+id/imageViewSecondMilestone2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/shop_kids"
                    />

                <!--title Label-->
                <TextView
                    android:id="@+id/textViewTitleSecondMilestone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Boys Collection"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/textsize17sp"
                    android:textColor="#111"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="0dp"
                    android:layout_below="@+id/imageViewSecondMilestone2"/>
                <!--link button label -->
                <Button
                    android:id="@+id/buttonBoys"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/link_button_style"
                    android:textSize="11sp"
                    android:text="GO"
                    android:elevation="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_below="@+id/textViewTitleSecondMilestone2"
                    android:layout_marginRight="11dp"
                    android:layout_marginLeft="11dp"/>
            </RelativeLayout>
            <!-- Girls-->
            <RelativeLayout
                android:id="@+id/relativeSecondMilestone3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="11dp"
                android:padding="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:elevation="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="11dp"
                android:layout_below="@+id/relativeSecondMilestone2"
                android:background="@drawable/profile_card_style">

                <ImageView
                    android:id="@+id/imageViewSecondMilestone3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/shop_kids"
                    />

                <!--title Label-->
                <TextView
                    android:id="@+id/textViewTitleSecondMilestone3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Girls Collection"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="11dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/textsize17sp"
                    android:textColor="#111"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="0dp"
                    android:layout_below="@+id/imageViewSecondMilestone3"/>
                <!--link button label -->
                <Button
                    android:id="@+id/buttonGirl"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:background="@drawable/link_button_style"
                    android:textSize="11sp"
                    android:text="GO"
                    android:elevation="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_below="@+id/textViewTitleSecondMilestone3"
                    android:layout_marginRight="11dp"
                    android:layout_marginLeft="11dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/scrollView"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
