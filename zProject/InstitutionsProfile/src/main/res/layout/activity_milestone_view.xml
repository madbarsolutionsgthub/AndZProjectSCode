<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_milestone_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="#ddd"
    tools:context="com.csi.institutionsprofile.Activity.ActivityMilestoneView">
    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/toolbar"
        android:background="@drawable/profile_card_style">
        <ImageView
            android:id="@+id/imageViewMilestone"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="0dp"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/imageViewMilestone">
            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/banbasisDes"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                android:layout_marginTop="11dp"
                android:textSize="@dimen/textsize12sp"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/textColorTitleSmall"
                android:layout_below="@id/textViewTitleFirstMilestone"
                android:layout_marginBottom="0dp"/>

            </ScrollView>
    </RelativeLayout>

</RelativeLayout>
