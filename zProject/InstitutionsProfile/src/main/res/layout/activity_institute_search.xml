<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.csi.institutionsprofile.Activity.ActivityInstituteSearch">
    <!--Header-->
    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:background="@color/brandColorLight"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <ImageView
                android:id="@+id/imageViewBackPress"
                android:layout_width="25dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/back_arrow"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/imageViewBackPress"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible"/>
            <!--
            <TextView
                android:id="@+id/textViewBankAgentUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="2dp"
                android:text="Jahidul Islam"
                android:layout_toRightOf="@+id/imageViewProfile"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize12sp" />
                -->
            <ImageView
                android:id="@+id/imageViewSetting"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/ic_launcher"
                android:visibility="invisible"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/textViewStakeholderSearchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="@string/institute_search"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize17sp" />
        <TextView
            android:id="@+id/textViewStakeholderSearchItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:text="@string/searchItem"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize12sp" />
        <!--Search Label-->
        <RelativeLayout
            android:id="@+id/linearlayoutSearch"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:background="@drawable/search_field_style">

            <Spinner
                android:id="@+id/spinnerSearch"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:fitsSystemWindows="true"
                android:gravity="center|right"
                android:paddingBottom="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="10dp"
                android:popupBackground="@drawable/spinner_popup_style"
                android:scrollbarSize="0dp"
                android:spinnerMode="dropdown"
                android:visibility="visible"/>
            <!--
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:background="@color/md_blue_400" />
                -->

            <AutoCompleteTextView
                android:id="@+id/editTextSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                style="@style/AppSearchView"
                android:textColorHint="#ddd"
                android:layout_toRightOf="@id/spinnerSearch"
                android:queryHint="Enter atleast 3 letters"
                android:backgroundTint="@android:color/transparent"
                android:imeOptions="actionSearch"
                android:singleLine="true"/>
            <ImageView
                android:id="@+id/imageViewSearch"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/search_icon"/>

        </RelativeLayout>
        <!--checkbox label-->
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
        <CheckBox
            android:id="@+id/chekboxGovt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Govt"
            android:layout_marginRight="0dp"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize12sp"
            android:paddingLeft="0dp"
            android:paddingTop="5dp"
            android:scaleX=".85"
            android:scaleY=".85"
            android:theme="@style/checkBoxStyle1"/>
        <CheckBox
            android:id="@+id/chekboxNonGovt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Non Govt"
            android:layout_marginRight="0dp"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/chekboxGovt"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize12sp"
            android:paddingLeft="0dp"
            android:paddingTop="5dp"
            android:scaleX=".85"
            android:scaleY=".85"
            android:theme="@style/checkBoxStyle1"/>
            <!--<CheckBox
                android:id="@+id/chekboxPrivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Private"
                android:layout_marginRight="0dp"
                android:layout_gravity="right"
                android:layout_toRightOf="@+id/chekboxNonGovt"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize12sp"
                android:paddingLeft="0dp"
                android:paddingTop="5dp"
                android:scaleX=".85"
                android:scaleY=".85"
                android:theme="@style/checkBoxStyle1"/>-->
            <CheckBox
                android:id="@+id/chekboxMpo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="MPO"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:layout_toRightOf="@+id/chekboxNonGovt"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize12sp"
                android:paddingLeft="0dp"
                android:paddingTop="5dp"
                android:scaleX=".85"
                android:scaleY=".85"
                android:theme="@style/checkBoxStyle1"/>
                </RelativeLayout>


        </RelativeLayout>
</LinearLayout>
    <!--card-->
    <RelativeLayout
        android:id="@+id/relativeSelectBox"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="170dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/profile_card_style"
        android:layout_alignTop="@+id/Header"
        >
        <!--layer 1-->
        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">
            <!--college-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/chekboxCollege"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="College"
                    android:layout_marginRight="0dp"
                    android:textColor="@color/textColorTitleSmall"
                    android:textSize="@dimen/textsize12sp"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:scaleX=".85"
                    android:scaleY=".85"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="2dp"
                    android:theme="@style/checkBoxStyle"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <CheckBox
                    android:id="@+id/chekboxSchoolCollege"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="@string/school_college"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="0dp"
                    android:textColor="@color/textColorTitleSmall"
                    android:textSize="@dimen/textsize12sp"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:scaleX=".85"
                    android:scaleY=".85"
                    android:layout_alignParentLeft="true"
                    android:theme="@style/checkBoxStyle"/>


            </RelativeLayout>
            <!--Madrasha-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/chekboxMadrasha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="@string/madrasha"
                    android:layout_marginRight="0dp"
                    android:textColor="@color/textColorTitleSmall"
                    android:textSize="@dimen/textsize12sp"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:scaleX=".85"
                    android:scaleY=".85"
                    android:layout_marginLeft="0dp"
                    android:theme="@style/checkBoxStyle"/>

            </RelativeLayout>
            <!--BM college-->


        </LinearLayout>
        <!--layer 2-->
        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_below="@+id/l1">
            <!--govt college-->
            <!--<RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/chekboxGovtCollege"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="@string/govt"
                    android:layout_marginRight="0dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/textColorTitleSmall"
                    android:textSize="@dimen/textsize12sp"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:scaleX=".85"
                    android:scaleY=".85"
                    android:layout_alignParentLeft="true"
                    android:theme="@style/checkBoxStyle"/>

            </RelativeLayout>-->
            <!--non govt college-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/chekboxBMCollege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="@string/bmCollege"
                android:layout_marginRight="0dp"
                android:textColor="@color/textColorTitleSmall"
                android:textSize="@dimen/textsize12sp"
                android:paddingLeft="0dp"
                android:paddingTop="5dp"
                android:scaleX=".85"
                android:scaleY=".85"
                android:theme="@style/checkBoxStyle"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            </RelativeLayout>
            <!--general college-->
            <!--<RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <CheckBox
                    android:id="@+id/chekboxGeneralCollege"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:text="@string/general"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/textColorTitleSmall"
                    android:textSize="@dimen/textsize12sp"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:scaleX=".85"
                    android:scaleY=".85"
                    android:theme="@style/checkBoxStyle"/>

            </RelativeLayout>
-->
        </LinearLayout>
    </RelativeLayout>
    <!--card1-->
    <RelativeLayout
        android:id="@+id/relativeSelectBox1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="170dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/profile_card_style"
        android:layout_alignTop="@+id/Header"
        android:visibility="invisible">
        <!--layer 1-->
        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <!--Division-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Spinner
                    android:id="@+id/spinnerDivision"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/brandColorLight"
                    android:fitsSystemWindows="true"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:layout_marginRight="20dp"
                    android:popupBackground="@drawable/spinner_popup_style"
                    android:scrollbarSize="4dp"
                    android:spinnerMode="dialog"
                    />

            </RelativeLayout>
            <!--District-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Spinner
                    android:id="@+id/spinnerDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/brandColorLight"
                    android:fitsSystemWindows="true"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:layout_marginRight="20dp"
                    android:popupBackground="@drawable/spinner_popup_style"
                    android:scrollbarSize="4dp"
                    android:spinnerMode="dialog"
                    />

            </RelativeLayout>
            <!--District-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Spinner
                    android:id="@+id/spinnerUpazilla"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/brandColorLight"
                    android:fitsSystemWindows="true"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:layout_marginRight="20dp"
                    android:popupBackground="@drawable/spinner_popup_style"
                    android:scrollbarSize="4dp"
                    android:spinnerMode="dialog"
                    />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
