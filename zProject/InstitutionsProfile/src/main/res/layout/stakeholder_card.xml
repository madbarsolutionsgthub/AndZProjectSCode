            <!--mobile no title label-->
    <TextView
        android:id="@+id/textViewMobileNoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mobile:"
        android:textColor="@color/textColorTitleLarge"
        android:textSize="@dimen/textsize12sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textViewPosition"
        android:layout_marginTop="5dp"/>
    <!--mobile no Label-->
    <TextView
        android:id="@+id/textViewMobileNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="01671340909"
        android:textColor="@color/textColorTitleSmall"
        android:textSize="@dimen/textsize12sp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textViewPosition"
        android:layout_toRightOf="@+id/textViewMobileNoTitle"
        android:layout_marginTop="5dp"/>
    <!--email title label-->
    <TextView
        android:id="@+id/textViewEmailNoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email:"
        android:textColor="@color/textColorTitleLarge"
        android:textSize="@dimen/textsize12sp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textViewMobileNoTitle"
        android:layout_marginTop="3dp"/>
    <!--email no Label-->
    <TextView
        android:id="@+id/textViewEmailNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
