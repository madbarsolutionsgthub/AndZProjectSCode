        android:layout_below="@+id/textViewMobileNoTitle"
        android:layout_toRightOf="@+id/textViewMobileNoTitle"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"/>
    </RelativeLayout>
        </LinearLayout>

    <!--CALL SMS AND EMAIL label-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeSmallBox"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="5dp">
    <ImageView
        android:id="@+id/imageViewCall"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/call_icon"/>
        <ImageView
            android:id="@+id/imageViewSMS"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sms_icon"
            android:layout_toRightOf="@+id/imageViewCall"/>
        <ImageView
            android:id="@+id/imageViewEmail"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/email_icon"
            android:layout_toRightOf="@+id/imageViewSMS"/>

    </RelativeLayout>
