    <!--authority name label-->
    <TextView
        android:id="@+id/textViewPrincipleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Golam Mostafa"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/textsize17sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/brandColorLight"/>
        <!--authority position title-->
        <TextView
            android:id="@+id/textViewPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DC"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/textsize12sp"
            android:textColor="@color/textColorTitleSmall"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/textViewPrincipleName"/>
        <!--division name label-->
            <!--<TextView
                android:id="@+id/textViewDivisionName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Dhaka Division"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/textsize12sp"
