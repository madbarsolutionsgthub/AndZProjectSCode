<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.csi.los.Activity.MainActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="96dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/chooseAccount"
        android:layout_marginTop="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chooseAccount"
        android:layout_below="@+id/logo"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:gravity="center"/>

    <LinearLayout
       android:id="@+id/activity_intro"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:orientation="vertical"
        android:layout_below="@+id/chooseAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <!--Bank agent label-->
       <LinearLayout
           android:id="@+id/linearBankAgentSelect"
           android:layout_width="match_parent"
           android:layout_height="120dp"
           android:layout_weight="0.50"
           android:layout_marginRight="50dp"
           android:layout_marginLeft="50dp"
           android:layout_marginTop="20dp"
           android:orientation="horizontal"
           android:gravity="center"
           android:background="@drawable/agent_bg2"
           >
           <RelativeLayout
               android:id="@+id/layoutBankAgent"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_below="@+id/line1"
               android:layout_marginBottom="2dp"
               android:layout_marginTop="25dp"
               android:orientation="horizontal"
               android:paddingLeft="10dp"
               android:paddingRight="2dp">

               <TextView
                   android:id="@+id/textViewBankAgent"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:paddingBottom="0dp"
                   android:paddingLeft="10dp"
                   android:paddingTop="5dp"
                   android:gravity="center|left|start"
                   android:text="@string/bankAgent"
                   android:textColor="@color/textColorTitleLarge"
                   android:textStyle="bold"
                   android:textSize="17sp"
                   />

               <TextView
                   android:id="@+id/textViewBankAgentDes"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:layout_below="@+id/textViewBankAgent"
                   android:paddingBottom="5dp"
                   android:paddingLeft="10dp"
                   android:paddingTop="0dp"
                   android:text="Bank Agent Entry"
                   android:textColor="@color/textColorTitleSmall"
                   android:textSize="11sp" />
               <ImageView
                   android:layout_width="64dp"
                   android:layout_height="64dp"
                   android:src="@drawable/agent_icon"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="15dp"/>
           </RelativeLayout>
       </LinearLayout>
        <!--Personl account label-->
        <LinearLayout
            android:id="@+id/linearPersonalAccSelect"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="0.50"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="11dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/personel_bg">
            <RelativeLayout
                android:id="@+id/layoutPersonal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/line1"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="2dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/logo3"
                    android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/textViewPersonalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:paddingBottom="0dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:gravity="center|left|start"
                    android:text="@string/personalAccount"
                    android:textColor="@color/textColorTitleLarge"
                    android:textStyle="bold"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textViewPersonalDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textViewPersonalTitle"
                    android:paddingBottom="5dp"
                    android:paddingRight="0dp"
                    android:layout_marginRight="0dp"
                    android:paddingTop="0dp"
                    android:text="@string/personalDes"
                    android:textColor="@color/textColorTitleSmall"
                    android:textSize="11sp" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/logo3"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/personel_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="30dp"/>

            </RelativeLayout>
        </LinearLayout>


   </LinearLayout>
    <TextView
        android:id="@+id/powerdBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/poweredBy"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:textStyle="normal"
        android:gravity="center"
        android:layout_marginBottom="17dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
