<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_agent_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@color/transparent_background"
    tools:context="com.csi.los.Activity.ActivityAgentAccount">
    <!--Header-->
    <LinearLayout
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:orientation="vertical"
        android:background="@color/md_blue_800"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            >
            <ImageView
                android:id="@+id/imageViewBackPress"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/arrow"/>
            <TextView
                android:id="@+id/textViewBankAgentUserName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:text="@string/accountTitle"
                android:layout_toRightOf="@+id/imageViewBackPress"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize17sp" />
            <TextView
                android:id="@+id/textViewLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:textSize="@dimen/textSize17sp"
                android:textColor="@color/white"
                android:text="@string/logout"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/logo"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Header">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            />
        <!--profile pic label-->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_photo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:src="@drawable/man_demo"
            android:elevation="15dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/white"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/agent_pic_edit2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/header_cover_image"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="46dp"
            android:src="@drawable/camera"
            android:foregroundGravity="right"
            android:elevation="30dp"
            />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_cover_image"
            android:background="@drawable/profile_card_style"
            android:elevation="4dp"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="23dp"
            android:layout_marginBottom="46dp">


            <ImageView
                android:id="@+id/agent_pic_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="46dp"
                android:src="@drawable/agent_icon"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />
            <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollViewDown"
                android:layout_below="@+id/agent_pic_edit">
                <RelativeLayout
                    android:id="@+id/linearPofile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/agent_pic_edit"
                    android:orientation="vertical"
                    >
                    <!--User Name label-->
                    <RelativeLayout
                        android:id="@+id/r1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:background="@drawable/login_edittext_style"
                        android:orientation="horizontal"
                        >

                        <EditText
                            android:id="@+id/editTextCustomerName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Jahidul Islam"
                            android:gravity="center|left"
                            android:textSize="@dimen/textSize11sp"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:textColor="@color/textColorTitleSmall"
                            android:backgroundTint="@android:color/transparent"
                            android:enabled="false"
                            android:editable="false"/>
                        <ImageView
                            android:id="@+id/imagePromotCustomerName"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="@dimen/text_padding"
                            android:src="@drawable/edit"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <!--Email label-->
                    <RelativeLayout
                        android:id="@+id/r2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:layout_below="@+id/r1"
                        android:background="@drawable/login_edittext_style"
                        android:orientation="horizontal"
                        >
                        <EditText
                            android:id="@+id/editTextCustomerEmail"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="abc@gmail.com"
                            android:gravity="center|left"
                            android:textSize="@dimen/textSize11sp"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:textColor="@color/textColorTitleSmall"
                            android:backgroundTint="@android:color/transparent"
                            android:enabled="false"
                            android:editable="false"/>
                        <ImageView
                            android:id="@+id/imagePromotCustomerEmail"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="@dimen/text_padding"
                            android:src="@drawable/edit"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>
                    <!--password label-->
                    <RelativeLayout
                        android:id="@+id/r3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:layout_below="@+id/r2"
                        android:background="@drawable/login_edittext_style"
                        android:orientation="horizontal"
                        >
                        <EditText
                            android:id="@+id/editTextCustomerPassword"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="123456"
                            android:textSize="@dimen/textSize11sp"
                            android:paddingLeft="10dp"
                            android:gravity="center|left"
                            android:inputType="numberPassword"
                            android:paddingStart="10dp"
                            android:enabled="false"
                            android:editable="false"
                            android:textColor="@color/textColorTitleSmall"
                            android:backgroundTint="@android:color/transparent"/>
                        <ImageView
                            android:id="@+id/imagePromotCustomerPassword"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="@dimen/text_padding"
                            android:src="@drawable/edit"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <!--Mobile No label-->
                    <RelativeLayout
                        android:id="@+id/r4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginRight="11dp"
                        android:layout_below="@+id/r3"
                        android:background="@drawable/login_edittext_style"
                        android:orientation="horizontal"
                        >
                        <EditText
                            android:id="@+id/editTextCustomerMobileNo"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="+8801712345678"
                            android:gravity="center|left"
                            android:textSize="@dimen/textSize11sp"
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:paddingStart="10dp"
                            android:enabled="false"
                            android:editable="false"
                            android:textColor="@color/textColorTitleSmall"
                            android:backgroundTint="@android:color/transparent"/>
                        <ImageView
                            android:id="@+id/imagePromotCustomerMobileNo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="@dimen/text_padding"
                            android:src="@drawable/edit"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                    <!--Button profile update-->
                    <Button
                        android:id="@+id/buttonProfileUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="23dp"
                        android:background="@drawable/login_button_style"
                        android:textSize="11sp"
                        android:text="@string/profile_update"
                        android:textAllCaps="false"
                        android:layout_below="@+id/r4"
                        android:textColor="@color/white"
                        android:layout_marginRight="23dp"
                        android:layout_marginLeft="23dp"/>

                </RelativeLayout>
            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
